<style>
    @keyframes sparkle {
        0%, 100% { text-shadow: 0 0 10px #fff, 0 0 20px #ff00ff, 0 0 30px #ff00ff, 0 0 40px #ff00ff; }
        50% { text-shadow: 0 0 20px #fff, 0 0 30px #ff00ff, 0 0 40px #ff00ff, 0 0 50px #ff00ff; }
    }

    @keyframes colorChange {
        0% { color: red; }
        25% { color: yellow; }
        50% { color: lime; }
        75% { color: cyan; }
        100% { color: magenta; }
    }
    .shiny-sparkle {
        animation: sparkle 1s infinite, colorChange 2s infinite;
        display: inline-block;
        position: relative;
    }
</style>
<script>
    document.addEventListener('DOMContentLoaded', function () {
        const sunSpotElements = document.querySelectorAll('.sunspot');
        let clickedCount = 0;

        function getRandomInt(min, max) {
            return Math.floor(Math.random() * (max - min + 1)) + min;
        }

        function applyRandomMovement(element) {
            const moveX = getRandomInt(-50, 50);
            const moveY = getRandomInt(-50, 50);
            element.style.transform = `translate(${moveX}px, ${moveY}px)`;
            element.style.transition = 'transform 2s ease-in-out';
        }

        sunSpotElements.forEach(element => {
            element.addEventListener('click', function () {
                if (!element.classList.contains('clicked')) {
                    element.classList.add('clicked');
                    clickedCount++;
                }
                if (clickedCount === sunSpotElements.length) {
                    sunSpotElements.forEach(el => {
                        el.classList.add('shiny-sparkle');
                        setInterval(() => applyRandomMovement(el), 2000);
                    });
                }
            });
        });
    });
</script>

