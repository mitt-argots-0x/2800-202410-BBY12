<%- include("templates/header") %>
<div class="top-0 bg-orange-500 w-full h-20"></div>

    <p class="text-3xl text-center mt-6"><span class="border-b-4 border-purple-600">Enter your new password</span></p>
<br> 
    <form class="pt-2 bg-teal-200 grid grid-row-2 mx-auto mt-4 w-3/5 pb-2 rounded-2xl" action="/reset-password/<%= token %>" method="POST">
        <input type="password" class="w-2/3 mx-auto px-2 border-2 border-teal-300 rounded-2xl focus:outline-none" id="password" name="newPassword"placeholder="New Password" required>
        <button type="submit" class="mt-4 w-2/5 mx-auto border-2 border-purple-500 bg-purple-400 rounded-3xl px-2 hover:border-purple-400 hover:bg-purple-300">Reset Password</button>
    </form>

<div class="absolute bg-orange-400 w-full h-20 bottom-0"></div>
<%- include("templates/footer") %>