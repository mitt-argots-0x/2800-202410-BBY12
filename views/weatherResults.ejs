<%- include("templates/header") %>

    <div class="fixed content-center w-full">
        <form class="flex justify-center">
            <input class="rounded-2xl focus:outline-none w-4/6 border-4 border-purple-400" type="text"
                placeholder="What weather are you looking for?">
        </form>
    </div>

    <br>
    <br>

    <div class="container mx-auto p-4">
        <h1 class="text-2xl font-bold mb-4">Weather Results</h1>

        <% if (data.length> 0) { %>
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
                
                
                <% data.forEach(day=> { %>
                    <a href="/destination?city=<%= day.city %>&date=<%= day.datetime %>&conditions=<%= day.conditions %>&tempmin=<%= day.tempmin %>&tempmax=<%= day.tempmax %>&humidity=<%= day.humidity %>&imageUrl=<%= day.imageUrl %>" class="card bg-white shadow-md rounded-lg p-4 block"></a>
                    
                        <h2 class="text-xl font-semibold"><strong>City:</strong><%= day.city %></h2>
                        <p><strong>Date:</strong><%= day.datetime %></p>
                       
                        <p>
                            <strong>Conditions:</strong>
                            
                            <%= day.conditions %>
                                <% if (day.conditions.includes('Rain')) { %>
                                    <i class="fas fa-cloud-showers-heavy"></i>
                                    <% } else if (day.conditions.includes('Snow')) { %>
                                        <i class="fas fa-snowflake"></i>
                                        <% } else if (day.conditions.includes('Sunny')) { %>
                                            <i class="fas fa-sun"></i>
                                            <% } else if (day.conditions.includes('Cloudy')) { %>
                                                <i class="fas fa-cloud"></i>
                                                <% } else if (day.conditions.includes('Windy')) { %>
                                                    <i class="fas fa-wind"></i>
                                                    <% } else if (day.conditions.includes('Fog')) { %>
                                                        <i class="fas fa-smog"></i>
                                                        <% } else { %>
                                                            <i class="fas fa-cloud"></i> <!-- Default icon -->
                                                            <% } %>
                        </p>
                        
                        <p><strong>Temperature:</strong> Min: <%= day.tempmin %>°C, Max: <%= day.tempmax %>°C</p>
                        <p><strong>Humidity:</strong>
                            <%= day.humidity %>%
                        </p>
                        <% if (day.imageUrl) { %>
                            <img src="<%= day.imageUrl %>" alt="Image of <%= day.city %>" class="w-full h-48 object-cover rounded mt-4">
                            <% } %>
                        </a>
                    <% }) %>
            </div>
            <% } else { %>
                <p>No data found for the selected criteria.</p>
                <% } %>

                    <a href="/weather" class="mt-4 inline-block text-blue-500 hover:underline">Search Again</a>
    </div>

    <%- include("templates/footer") %>