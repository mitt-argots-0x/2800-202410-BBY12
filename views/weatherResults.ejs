<%- include("templates/header") %>
    <nav id="nav-hamburger">
        <button id="hamburgerBtn" onclick="toggleMenu()">
            <i id="hamburgerMenu" class="fa-solid fa-xl fa-bars"></i>
            <a link href="/setting" class="menuItems">setting</a>
            <a link href="/logout" class="menuItems">Log out</a>
            <a link href="/about_us" class="menuItems">About us</a>
        </button>
    </nav>
    <div class="content-center w-full">
        <div id="searchBar" class="mx-auto flex justify-center bg-purple-400 w-2/3 h-10 rounded-2xl">
            <p class="text-center my-auto">Click to choose your preferred weather</p>
        </div>
    </div>

    <br>
    <br>

    <div class="container mx-auto p-4">
        <h1 class="text-2xl font-bold mb-4">Weather Results</h1>

        <% if (data.length> 0) { %>
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
                <% const seenCities={}; data.forEach(city=> {
                    if (!seenCities[city.city]) {
                    seenCities[city.city] = true;
                    %>
                    <div class="card bg-white shadow-md rounded-lg p-4">
                        <% if (city.imageUrl) { %>
                            <img src="<%= city.imageUrl %>" alt="Image of <%= city.city %>"
                                class="w-full h-48 object-cover rounded mb-4">
                            <% } %>
                                <h2 onclick="window.location.href='/destination?city=<%= city.city %>&startDate=<%= startDate %>&endDate=<%= endDate %>'"
                                    class="text-xl font-semibold">
                                    <strong>City:</strong>
                                    <%= city.city %>
                                </h2>
                    </div>
                    <% } }); %>
            </div>
            <% } else { %>
                <div class="no-data-box">
                    No data found for the selected criteria.
                </div>
                <% } %>

                    <a href="/home" class="mt-4 inline-block text-blue-500 hover:underline">Search Again</a>
    </div>

    <style>
        .no-data-box {
            border: 1px solid #d1d5db;
            background-color: #f9fafb;
            color: #6b7280;
            padding: 10px;
            border-radius: 8px;
            text-align: center;
            font-size: 0.875rem;
            width: fit-content;
            margin: 20px auto;
        }
    </style>

    <script>
        menuItems = document.querySelectorAll('.menuItems');
        menuItems.forEach((menuItem) => {
            menuItem.style.display = 'none';
        });
        navHam = document.getElementById("nav-hamburger");
        navHam.style.margin = '6px';
        navHam.style.marginTop = '14px';

        hamburgerMenu = document.getElementById("hamburgerMenu");
        hamburgerMenu.style.display = 'flex';
        hamburgerMenu.style.alignItems = 'baseline';
        hamburgerBtn = document.getElementById("hamburgerBtn");
        hamburgerBtn.style.position = 'fixed';

        function toggleMenu() {
            if (hamburgerMenu.classList.contains("fa-bars")) {
                hamburgerMenu.classList.remove("fa-bars");
                hamburgerMenu.classList.add("fa-burger");
            } else {
                hamburgerMenu.classList.add("fa-bars");
                hamburgerMenu.classList.remove("fa-burger");
            }
            var navLinks = document.querySelectorAll('.menuItems');
            navLinks.forEach((navLink) => {
                if (navLink.style.display === 'flex') {
                    navLink.style.display = 'none';
                } else {
                    navLink.style.display = 'flex';
                }
            });
        }
    </script>
    <%- include("templates/homenav") %>
        <%- include("templates/footer") %>