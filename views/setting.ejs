<%- include("templates/header") %>

    <style>
        body.dark-mode {
            background-color: #121212;
            color: #e0e0e0;
        }

        .dark-mode .bg-teal-200 {
            background-color: #1d1d1d;
        }

        .dark-mode .border-orange-300 {
            border-color: #ffab40;
        }

        .dark-mode .bg-purple-400 {
            background-color: #673ab7;
        }

        .dark-mode .hover\:bg-purple-300:hover {
            background-color: #9575cd;
        }

        /* Dark mode toggle button styles */
        #darkModeToggle {
            position: fixed;
            top: 10px;
            right: 10px;
            padding: 10px 20px;
            background-color: #4a5568;
            color: #ffffff;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            transition: background-color 0.3s ease;
        }

        #darkModeToggle:hover {
            background-color: #2d3748;
        }
    </style>

    <nav id="nav-hamburger">
        <button id="hamburgerBtn" onclick="toggleMenu()">
            <i id="hamburgerMenu" class="fa-solid fa-xl fa-bars"></i>
            <a link href="/setting" class="menuItems">setting</a>
            <a link href="/logout" class="menuItems">Log out</a>
            <a link href="/about_us" class="menuItems">About us</a>
        </button>
    </nav>
    <button id="darkModeToggle">Dark Mode</button>
    <form action='/changePersonalinfo' method='post'
        class="bg-teal-200 grid grid-row-2 mx-auto mt-4 w-3/5 pb-2 rounded-2xl">
        <div class="mx-auto w-full grid justify-center">
            <div class="rounded-2xl my-2">
                <input class="w-full mx-auto px-2 border-2 border-orange-300 rounded-2xl focus:outline-none"
                    name='username' type='text' placeholder='Name'><br>
            </div>
            <div class="rounded-2xl my-2">
                <input class="w-full mx-auto px-2 border-2 border-orange-300 rounded-2xl focus:outline-none"
                    name='curpassword' type='password' placeholder='Current Password'><br>
            </div>
            <div class="rounded-2xl my-2">
                <input class="w-full mx-auto px-2 border-2 border-orange-300 rounded-2xl focus:outline-none"
                    name='newpassword' type='password' placeholder='New Password'><br>
            </div>
        </div>
        <div class="flex justify-center">
            <button
                class="border-2 border-purple-500 bg-purple-400 rounded-3xl px-2 hover:border-purple-400 hover:bg-purple-300">Submit</button>
        </div>
    </form>
    <div class="grid justify-center grid-cols-2 w-full mt-4 h-5/6">
    <button
    class="h-3/4 ml-2 my-2 border-2 border-teal-300 bg-teal-200 rounded-3xl px-2 hover:border-cyan-300 hover:bg-cyan-200"
    id="setting" onclick='window.location.href="/signOut"'><i class="fa-solid fa-trash"></i> Destroy account</button>
<button
    class="h-3/4 ml-2 my-2 border-2 border-teal-300 bg-teal-200 rounded-3xl px-2 hover:border-cyan-300 hover:bg-cyan-200"
    id="" onclick='window.location.href="/logout"'><i class="fa-solid fa-sign-out"></i> Logout</button>
</div>
    <%- include("templates/homenav") %>
        <%- include("templates/footer") %>

            <script>
                document.addEventListener('DOMContentLoaded', (event) => {
                    const darkModeToggle = document.getElementById('darkModeToggle');

                    darkModeToggle.addEventListener('click', () => {
                        document.body.classList.toggle('dark-mode');
                        if (document.body.classList.contains('dark-mode')) {
                            darkModeToggle.textContent = 'Light Mode';
                        } else {
                            darkModeToggle.textContent = 'Dark Mode';
                        }
                    });
                });
                const menuItems = document.querySelectorAll('.menuItems');
    menuItems.forEach((menuItem) => {
        menuItem.style.display = 'none';
    });
    const navHam = document.getElementById("nav-hamburger");
    navHam.style.margin = '6px';
    navHam.style.marginTop = '14px';

    const hamburgerMenu = document.getElementById("hamburgerMenu");
    hamburgerMenu.style.display = 'flex';
    hamburgerMenu.style.alignItems = 'baseline';

    const hamburgerBtn = document.getElementById("hamburgerBtn");
    hamburgerBtn.style.position = 'fixed';

    function toggleMenu() {
        if (hamburgerMenu.classList.contains("fa-bars")) {
            hamburgerMenu.classList.remove("fa-bars");
            hamburgerMenu.classList.add("fa-burger");
        } else {
            hamburgerMenu.classList.add("fa-bars");
            hamburgerMenu.classList.remove("fa-burger");
        }
        const navLinks = document.querySelectorAll('.menuItems');
        navLinks.forEach((navLink) => {
            if (navLink.style.display === 'flex') {
                navLink.style.display = 'none';
            } else {
                navLink.style.display = 'flex';
            }
        });
    }
            </script>