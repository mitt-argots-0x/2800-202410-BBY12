<%- include("templates/header") %> 
<form action='/changePersonalinfo' method='post'>
    <div class="row">
        <div class="col-3">
            <input class="form-control" name='username' type='text' placeholder='name'><br>
        </div>
    </div>
    <div class="row">
        <div class="col-3">
            <input class="form-control" name='curpassword' type='password' placeholder='current password'><br>
        </div>
    </div>
    <div class="row">
        <div class="col-3">
            <input class="form-control" name='newpassword' type='password' placeholder='new password'><br>
        </div>
    </div>
    <div class="row" >
        <div class="col-2">
        <button class="btn btn-primary">Submit</button>
        </div>
    </div>
</form>


