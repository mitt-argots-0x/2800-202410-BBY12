<%- include("templates/header") %> 
<form action='/changePersonalinfo' method='post' class="bg-teal-200 grid grid-row-2 mx-auto mt-4 w-3/5 pb-2 rounded-2xl">
    <div class="mx-auto w-full grid justify-center">
        <div class="rounded-2xl my-2">
            <input class="w-full mx-auto px-2 border-2 border-orange-300 rounded-2xl focus:outline-none" name='username' type='text' placeholder='Name'><br>
        </div>
        <div class="rounded-2xl my-2">
            <input class="w-full mx-auto px-2 border-2 border-orange-300 rounded-2xl focus:outline-none" name='curpassword' type='password' placeholder='Current Password'><br>
        </div>
        <div class="rounded-2xl my-2">
            <input class="w-full mx-auto px-2 border-2 border-orange-300 rounded-2xl focus:outline-none" name='newpassword' type='password' placeholder='New Password'><br>
        </div>
    </div>
    <div class="flex justify-center">
        <button class="border-2 border-purple-500 bg-purple-400 rounded-3xl px-2 hover:border-purple-400 hover:bg-purple-300">Submit</button>
    </div>

</form>

